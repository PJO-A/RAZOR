@page
@model Bloggie.Web.Pages.Admin.Blogs.AddModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add Blog Post</h1>
    </div>
</div>

<div>
    <div class=" container">
        <form method="post">

            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" asp-for="AddBlogPostRequest.Heading" >
            </div>

            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page title</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="AddBlogPostRequest.PageTitle">
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="AddBlogPostRequest.Content"> </textarea>
            </div>

            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short description</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="AddBlogPostRequest.ShortDescription" >
            </div>

            <div class="mb-3">
                <label for="featureImageUrl" class="form-label">Feature Image Url</label>
                <input type="text" class="form-control" asp-for="AddBlogPostRequest.FeatureImageUrl" >
            </div>

            <div class="mb-3">
                <label for="urlHandle" class="form-label">Url Handle</label>
                <input type="text" class="form-control" asp-for="AddBlogPostRequest.UrlHandle">
            </div>

            <div class="mb-3">
                <label for="publishedDate" class="form-label">Published date</label>
                <input type="date" class="form-control" asp-for="AddBlogPostRequest.PublishedDate">
            </div>

            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" asp-for="AddBlogPostRequest.Author">
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox"  asp-for="AddBlogPostRequest.Visible">
                <label class="form-check-label" for="isVisible">
                    Is visible
                </label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">
                    Submit
                </button>
            </div>

        </form>
    </div>
</div>